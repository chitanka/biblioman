<!DOCTYPE html>
<html lang="bg" prefix="og: http://ogp.me/ns# book: http://ogp.me/ns/book#">
	<head>
		{% block headers %}
			<meta charset="utf-8">
			<meta name="viewport" content="initial-scale=1.0, width=device-width">
			<title>{{ block('title') is defined ? block('title')|replace({'<br>': ' — '})|striptags|trim ~ ' — ' ~ sitename : sitename }}</title>
			<meta name="description" content="{% block description 'Проект за създаване на пълно описание на всички книги, издадени на български език' %}">

			{% if opengraph is defined %}
				{% for key, value in opengraph %}
					<meta property="og:{{ key }}" content="{{ value|replace({'<br>': ' — '})|striptags|trim }}">
				{% endfor %}
			{% else %}
				<meta property="og:url" content="{{ url('homepage') }}">
				<meta property="og:image" content="{{ app.request.schemeAndHttpHost ~ asset('images/logo.png') }}">
				<meta property="og:image:alt" content="Лого на {{ sitename }}">
			{% endif %}
			<meta property="og:site_name" content="{{ sitename }}">
			<meta property="og:locale" content="bg_BG">

			<!-- thanks to realfavicongenerator.net -->
			<link rel="apple-touch-icon" sizes="76x76" href="{{ asset('apple-touch-icon.png') }}">
			<link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
			<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
			<link rel="manifest" href="{{ asset('site.webmanifest') }}">
			<link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#5bbad5">
			<meta name="msapplication-TileColor" content="#da532c">
			<meta name="theme-color" content="#ffffff">

			{% block stylesheets %}
				<link rel="stylesheet" href="{{ asset('bundles/easyadmin/stylesheet/bootstrap.min.css') }}">
				<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
				<link rel="stylesheet" href="{{ asset('bundles/easyadmin/stylesheet/font-awesome.min.css') }}">
				<link rel="stylesheet" href="{{ asset('lightgallery/css/lightgallery.min.css') }}">
				<link rel="stylesheet" href="{{ asset('bootstrap-multiselect/css/bootstrap-multiselect.css') }}">
				<link rel="stylesheet" href="{{ asset('fontawesome-iconpicker/css/fontawesome-iconpicker.min.css') }}">
				<link rel="stylesheet" href="{{ asset('css/frontend.css') }}">
			{% endblock %}
		{% endblock headers %}
	</head>
	<body class="{% spaceless %}{% block body_class '' %}{% endspaceless %}">
		{% block body %}
			<header class="overall-header">
				<div class="container">
					{% block navbar %}
						{% include 'navbar.html.twig' %}
					{% endblock %}
				</div>
			</header>
			<div id="content">
				<div class="container">
					{% block messages %}
						{% include 'messages.html.twig' %}
					{% endblock %}
					{% block content '' %}
				</div>
			</div>
			<footer class="overall-footer">
				<div class="container">
					{% block footer %}
						{% include 'footer.html.twig' %}
					{% endblock %}
				</div>
			</footer>
		{% endblock %}
		{% block javascripts %}
			<script src="{{ asset('bundles/easyadmin/javascript/jquery.min.js') }}"></script>
			<script src="{{ asset('bundles/easyadmin/javascript/bootstrap.min.js') }}"></script>
			<script src="{{ asset('bundles/easyadmin/javascript/jquery.highlight.min.js') }}"></script>
			<script src="{{ asset('lightgallery/js/lightgallery.min.js') }}"></script>
			<script src="{{ asset('lightgallery-plugins/js/lg-zoom.min.js') }}"></script>
			<script src="{{ asset('lightgallery-plugins/js/lg-fullscreen.min.js') }}"></script>
			<script src="{{ asset('bootstrap-multiselect/js/bootstrap-multiselect.js') }}"></script>
			<script src="{{ asset('fontawesome-iconpicker/js/fontawesome-iconpicker.min.js') }}"></script>
			<script src="{{ asset('js/frontend.js') }}"></script>
		{% endblock %}
		{% block custom_javascript '' %}
	</body>
</html>
