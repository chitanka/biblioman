<!DOCTYPE html>
<html lang="bg">
	<head>
		{% block headers %}
			<meta charset="utf-8">
			<meta name="description" content="{% block description '' %}">
			<meta name="viewport" content="initial-scale=1.0, width=device-width">
			<title>{{ block('title') is defined ? block('title')|striptags ~ ' â€” ' ~ sitename : sitename }}</title>
			<link rel="icon" href="{{ asset('favicon.png') }}" type="image/png">
			<link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
			{% block stylesheets %}
				<link rel="stylesheet" href="{{ asset('bundles/easyadmin/stylesheet/bootstrap.min.css') }}">
				<link rel="stylesheet" href="{{ asset('bundles/easyadmin/stylesheet/font-awesome.min.css') }}">
				<link href="//cdn.rawgit.com/noelboss/featherlight/1.6.1/release/featherlight.min.css" type="text/css" rel="stylesheet">
				<link href="//cdn.rawgit.com/noelboss/featherlight/1.6.1/release/featherlight.gallery.min.css" type="text/css" rel="stylesheet">
				<link href="{{ asset('css/biblioman.css') }}" rel="stylesheet">
			{% endblock %}
		{% endblock headers %}
	</head>
	<body class="{% spaceless %}{% block body_class '' %}{% endspaceless %}">
		{% block body %}
			<div class="container">
				{% block navbar %}
					{% include 'navbar.html.twig' %}
				{% endblock %}
				{% block messages %}
					{% include 'messages.html.twig' %}
				{% endblock %}
				{% block content '' %}
			</div>
		{% endblock %}
		{% block javascripts %}
			<script src="{{ asset('bundles/easyadmin/javascript/jquery.min.js') }}"></script>
			<script src="{{ asset('bundles/easyadmin/javascript/bootstrap.min.js') }}"></script>
			<script src="{{ asset('bundles/easyadmin/javascript/jquery.highlight.min.js') }}"></script>
			<script src="//cdn.rawgit.com/noelboss/featherlight/1.6.1/release/featherlight.min.js" type="text/javascript" charset="utf-8"></script>
			<script src="//cdn.rawgit.com/noelboss/featherlight/1.6.1/release/featherlight.gallery.min.js" type="text/javascript" charset="utf-8"></script>
		{% endblock %}
		{% block custom_javascript '' %}
	</body>
</html>
