<form role="form" class="{{ class|default('') }} book-search-form" method="get" action="{{ path('books') }}">
	<div class="form-group">
		<label class="sr-only" for="q">Заглавие, автор, …</label>
		<div class="input-group">
			<input placeholder="заглавие, автор…" value="{{ query|default('') }}" tabindex="1" class="form-control" name="q" id="q" type="search">
			<span class="input-group-btn">
				<button type="submit" class="btn btn-default"><span class="fa fa-search"></span><span class="sr-only">Търсене</span></button>
			</span>
		</div>
	</div>
</form>
