{% extends "layout.html.twig" %}

{% block title %}
	Книги
	{% if query.raw is not empty %}
		— {{ query.raw }}
	{% endif %}
{% endblock %}

{% block content %}

	{% include 'App:Book:books.html.twig' with { heading: 'Книги', route: 'books', books: pager.currentPageResults, mode: app.request.get('_mode', 'list') } %}

	{% include 'pager.html.twig' %}

{% endblock %}

{% block custom_javascript %}
	<script>
		{% if query.term is not empty %}
		$(function() {
			$(".entity-field{{ query.field }}").highlight("{{ query.term }}");
		});
		{% endif %}
	</script>
{% endblock %}
