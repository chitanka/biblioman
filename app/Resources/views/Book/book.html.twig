{% import '_macros.html.twig' as _ %}
<div class="well book" itemscope itemtype="http://schema.org/Book">
	<div class="row">
		<div class="col-md-3">
			<div class="thumbnail popover-trigger" data-content="{{ book.annotation|nl2br }}" data-placement="right" style="width: 210px; max-width: 100%">
				{% if book.cover %}
					<a href="{{ _.thumbCover(book.cover, 1000) }}" class="thumb-link">
						<img src="{{ _.thumbCover(book.cover, 200) }}" width="200">
					</a>
				{% else %}
					<img src="{{ _.thumbCover('nocover.png', 200) }}" width="200">
				{% endif %}
			</div>
		</div>
		<div class="col-md-9">
			<dl class="dl-horizontal">
				{% for field in fields %}
					{{ _.printField(book, field, searchableFields) }}
				{% endfor %}
				<dt>...</dt>
				<dd class="book-buttons">
					{{ _.printBookButtons(book) }}
					{{ _.printBookEditInfo(book, searchableFields) }}
				</dd>
			</dl>
		</div>
	</div>
</div>
