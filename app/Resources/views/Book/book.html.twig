{% import '_bookMacros.html.twig' as _ %}
<div class="media well book" itemscope itemtype="http://schema.org/Book">
	<div class="media-left">
		<div class="thumbnail" style="width: 210px">
			{% if book.cover %}
				<img src="/thumb/{{ _.thumb(book.cover, 200) }}" width="200" data-featherlight="/thumb/{{ _.thumb(book.cover, 800) }}">
			{% else %}
				<img src="/thumb/nocover.200.png" width="200">
			{% endif %}
		</div>
	</div>
	<div class="media-body">
		<dl class="dl-horizontal">
			{% for field in fields %}
				{{ _.printField(book, field, searchableFields) }}
			{% endfor %}
			<dt>...</dt>
			<dd>
				<a href="{{ path('books_show', { id: book.id }) }}" title="Пълен преглед на записа" class="btn btn-default"><span class="fa fa-book"></span></a>
				<a href="{{ path('easyadmin') }}?action=edit&entity=Book&id={{ book.id }}" title="Редактиране на записа" class="btn btn-default"><span class="fa fa-pencil"></span></a>
				{% if book.isIncomplete %}
					<span class="text-danger">Записът е непълен.</span>
				{% endif %}
				{% if book.nbScans == 0 %}
					<span class="text-danger">Липсват сканирани страници.</span>
				{% endif %}
			</dd>
		</dl>
	</div>
</div>
