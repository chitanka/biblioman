{% extends "layout.html.twig" %}

{% block title %}
	<small><a href="{{ path('shelves') }}">Рафт</a>:</small>
	<span class="fa {{ shelf.icon }} shelf-icon"></span>
	<span class="shelf-name">{{ shelf.name }}</span>
	<span class="shelf-nb-books badge badge-info">{{ shelf.nbBooks }}</span>
	<span class="extra-info">• от {{ shelf.creator }}</span>
{% endblock %}

{% block content %}

	{% set shelfDescription %}
		{% if shelf.description is not empty %}
			<div class="shelf-description well">
				{{ shelf.description|format_paragraphs }}
			</div>
		{% endif %}
	{% endset %}
	{% set heading %}
		{{ block('title') }}
	{% endset %}
	{% include 'Book/books.html.twig' with { heading: heading, contentAfterHeading: shelfDescription, books: pager.currentPageResults } %}
	{% include 'pager.html.twig' %}

{% endblock %}
