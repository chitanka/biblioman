{
	"name": "chitanka/biblioman",
	"license": "MIT",
	"type": "project",
	"description": "The Chitanka bibliographic site",
	"autoload": {
		"psr-4": { "App\\": "app/" }
	},
	"repositories": [{
		"type": "package",
		"package": {
			"name": "lightgallery",
			"version": "1.3.7",
			"source": {
				"url": "https://github.com/sachinchoolur/lightGallery",
				"type": "git",
				"reference": "master"
			}
		}
	}],
	"require": {
		"php": ">=5.5.9",
		"symfony/symfony": "~3.2",
		"doctrine/orm": "^2.5",
		"doctrine/doctrine-bundle": "^1.6",
		"doctrine/doctrine-cache-bundle": "^1.2",
		"twig/extensions": "~1.0",
		"symfony/assetic-bundle": "~2.3",
		"symfony/swiftmailer-bundle": "^2.3",
		"symfony/monolog-bundle": "^3.0",
		"symfony/polyfill-apcu": "^1.0",
		"sensio/distribution-bundle": "^5.0",
		"sensio/framework-extra-bundle": "^3.0.2",
		"fortawesome/font-awesome": "v4.3.0",
		"javiereguiluz/easyadmin-bundle": "dev-master",
		"vich/uploader-bundle": "1.3.1",
		"white-october/pagerfanta-bundle": ">=1.0",
		"friendsofsymfony/message-bundle": "^1.3",
		"liip/url-auto-converter-bundle": "dev-master",
		"stof/doctrine-extensions-bundle": "^1.2",
		"lightgallery": "*",
		"chitanka/wiki-bundle": "*@dev",
		"chitanka/utils": "*@dev"
	},
	"require-dev": {
		"sensio/generator-bundle": "^3.0",
		"symfony/phpunit-bridge": "^3.0"
	},
	"minimum-stability": "dev",
	"scripts": {
		"symfony-scripts": [
			"Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
			"Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
			"Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
			"Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
			"Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
		],
		"post-install-cmd": [
			"@symfony-scripts"
		],
		"post-update-cmd": [
			"@symfony-scripts"
		]
	},
	"config": {
		"platform": {
			"php": "5.5.9"
		},
		"bin-dir": "bin"
	},
	"extra": {
		"symfony-app-dir": "app",
		"symfony-bin-dir": "bin",
		"symfony-var-dir": "var",
		"symfony-web-dir": "web",
		"symfony-assets-install": "relative"
	}
}
